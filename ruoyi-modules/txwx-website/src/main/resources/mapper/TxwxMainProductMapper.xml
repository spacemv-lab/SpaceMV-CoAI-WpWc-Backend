<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.txwx.web.mapper.TxwxMainProductMapper">
    
    <resultMap type="TxwxMainProduct" id="MainProductResult">
        <result property="productId"    column="product_id"    />
        <result property="productName"    column="product_name"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="description"    column="description"    />
        <result property="isShow"    column="is_show"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="jumpUrl"    column="jump_url"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="savedBy"    column="saved_by"    />
        <result property="savedTime"    column="saved_time"    />
        <result property="publishedBy"    column="published_by"    />
        <result property="publishedTime"    column="published_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectMainProductVo">
        select product_id, product_name, image_url, description, is_show, sort_order, jump_url, create_by, create_time, update_by, update_time, saved_by, saved_time, published_by, published_time, remark from txwx_main_product
    </sql>

    <select id="selectMainProductList" parameterType="TxwxMainProduct" resultMap="MainProductResult">
        <include refid="selectMainProductVo"/>
        <where>  
            <if test="productName != null  and productName != ''"> and product_name like concat('%', #{productName}, '%')</if>
            <if test="imageUrl != null  and imageUrl != ''"> and image_url like concat('%', #{imageUrl}, '%')</if>
            <if test="description != null  and description != ''"> and description like concat('%', #{description}, '%')</if>
            <if test="isShow != null  and isShow != ''"> and is_show = #{isShow}</if>
            <if test="sortOrder != null "> and sort_order = #{sortOrder}</if>
            <if test="jumpUrl != null  and jumpUrl != ''"> and jump_url like concat('%', #{jumpUrl}, '%')</if>
        </where>
        order by sort_order asc, create_time desc
    </select>
    
    <select id="selectMainProductByProductId" parameterType="Long" resultMap="MainProductResult">
        <include refid="selectMainProductVo"/>
        where product_id = #{productId}
    </select>

    <select id="selectShowMainProductList" parameterType="String" resultMap="MainProductResult">
        <include refid="selectMainProductVo"/>
        where is_show = #{isShow}
        order by sort_order asc, create_time desc
    </select>
        
    <insert id="insertMainProduct" parameterType="TxwxMainProduct" useGeneratedKeys="true" keyProperty="productId">
        insert into txwx_main_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="productName != null and productName != ''">product_name,</if>
            <if test="imageUrl != null and imageUrl != ''">image_url,</if>
            <if test="description != null">description,</if>
            <if test="isShow != null and isShow != ''">is_show,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="jumpUrl != null">jump_url,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="savedBy != null">saved_by,</if>
            <if test="savedTime != null">saved_time,</if>
            <if test="publishedBy != null">published_by,</if>
            <if test="publishedTime != null">published_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="productName != null and productName != ''">#{productName},</if>
            <if test="imageUrl != null and imageUrl != ''">#{imageUrl},</if>
            <if test="description != null">#{description},</if>
            <if test="isShow != null and isShow != ''">#{isShow},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="jumpUrl != null">#{jumpUrl},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="savedBy != null">#{savedBy},</if>
            <if test="savedTime != null">#{savedTime},</if>
            <if test="publishedBy != null">#{publishedBy},</if>
            <if test="publishedTime != null">#{publishedTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateMainProduct" parameterType="TxwxMainProduct">
        update txwx_main_product
        <trim prefix="SET" suffixOverrides=",">
            <if test="productName != null and productName != ''">product_name = #{productName},</if>
            <if test="imageUrl != null and imageUrl != ''">image_url = #{imageUrl},</if>
            <if test="description != null">description = #{description},</if>
            <if test="isShow != null and isShow != ''">is_show = #{isShow},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="jumpUrl != null">jump_url = #{jumpUrl},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="savedBy != null">saved_by = #{savedBy},</if>
            <if test="savedTime != null">saved_time = #{savedTime},</if>
            <if test="publishedBy != null">published_by = #{publishedBy},</if>
            <if test="publishedTime != null">published_time = #{publishedTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where product_id = #{productId}
    </update>

    <delete id="deleteMainProductByProductId" parameterType="Long">
        delete from txwx_main_product where product_id = #{productId}
    </delete>

    <delete id="deleteMainProductByProductIds" parameterType="String">
        delete from txwx_main_product where product_id in
        <foreach item="productId" collection="array" open="(" separator="," close=")">
            #{productId}
        </foreach>
    </delete>

    <select id="getMaxSortOrder" resultType="Integer">
        select COALESCE(max(sort_order), 0) from txwx_main_product
    </select>

    <update id="updateProductSort">
        update txwx_main_product set sort_order = #{sortOrder} where product_id = #{productId}
    </update>

    <update id="updateByAndTime">
        update txwx_main_product
        <trim prefix="SET" suffixOverrides=",">
            <if test="publishedBy != null">published_by = #{publishedBy},</if>
            <if test="publishedTime != null">published_time = #{publishedTime},</if>
        </trim>
    </update>

    <delete id="clearMainProduct">
        truncate table txwx_main_product
    </delete>
</mapper>