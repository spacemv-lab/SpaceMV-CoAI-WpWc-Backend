<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.txwx.web.mapper.TxwxFocusTempMapper">
    
    <resultMap type="TxwxFocusTemp" id="FocusTempResult">
        <result property="focusId"    column="focus_id"    />
        <result property="focusName"    column="focus_name"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="jumpUrl"    column="jump_url"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="savedBy"    column="saved_by"    />
        <result property="savedTime"    column="saved_time"    />
        <result property="publishedBy"    column="published_by"    />
        <result property="publishedTime"    column="published_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectFocusTempVo">
        select focus_id, focus_name, image_url, jump_url, sort_order, create_by, create_time, update_by, update_time, saved_by, saved_time, published_by, published_time, remark from txwx_focus_temp
    </sql>

    <select id="selectFocusTempList" resultMap="FocusTempResult">
        <include refid="selectFocusTempVo"/>
        order by sort_order asc, create_time desc
    </select>
    
    <select id="selectFocusTempByFocusId" parameterType="Long" resultMap="FocusTempResult">
        <include refid="selectFocusTempVo"/>
        where focus_id = #{focusId}
    </select>
        
    <insert id="insertFocusTemp" parameterType="TxwxFocusTemp" useGeneratedKeys="true" keyProperty="focusId">
        insert into txwx_focus_temp
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="focusName != null and focusName != ''">focus_name,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="jumpUrl != null">jump_url,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="savedBy != null">saved_by,</if>
            <if test="savedTime != null">saved_time,</if>
            <if test="publishedBy != null">published_by,</if>
            <if test="publishedTime != null">published_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="focusName != null and focusName != ''">#{focusName},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="jumpUrl != null">#{jumpUrl},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="savedBy != null">#{savedBy},</if>
            <if test="savedTime != null">#{savedTime},</if>
            <if test="publishedBy != null">#{publishedBy},</if>
            <if test="publishedTime != null">#{publishedTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateFocusTemp" parameterType="TxwxFocusTemp">
        update txwx_focus_temp
        <trim prefix="SET" suffixOverrides=",">
            <if test="focusName != null and focusName != ''">focus_name = #{focusName},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="jumpUrl != null">jump_url = #{jumpUrl},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="savedBy != null">saved_by = #{savedBy},</if>
            <if test="savedTime != null">saved_time = #{savedTime},</if>
            <if test="publishedBy != null">published_by = #{publishedBy},</if>
            <if test="publishedTime != null">published_time = #{publishedTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where focus_id = #{focusId}
    </update>

    <delete id="deleteFocusTempByFocusId" parameterType="Long">
        delete from txwx_focus_temp where focus_id = #{focusId}
    </delete>

    <delete id="deleteFocusTempByFocusIds" parameterType="String">
        delete from txwx_focus_temp where focus_id in 
        <foreach item="focusId" collection="array" open="(" separator="," close=")">
            #{focusId}
        </foreach>
    </delete>

    <delete id="clearFocusTemp">
        truncate table txwx_focus_temp
    </delete>

    <select id="getMaxSortOrder" resultType="Integer">
        select COALESCE(max(sort_order), 0) from txwx_focus_temp
    </select>

    <!-- 将临时表数据复制到正式表 -->
    <insert id="copyTempToFormal">
        insert into txwx_focus (
            focus_name, image_url, jump_url, sort_order, create_by, create_time, 
            update_by, update_time, saved_by, saved_time, published_by, published_time, remark
        )
        select 
            focus_name, image_url, jump_url, sort_order, create_by, create_time, 
            update_by, update_time, saved_by, saved_time, published_by, published_time, remark
        from txwx_focus_temp
    </insert>

    <!-- 批量插入关注配置 -->
    <insert id="batchInsertFocusTemp" parameterType="java.util.List">
        insert into txwx_focus_temp (
            focus_name, image_url, jump_url, sort_order, create_by, create_time, 
            update_by, update_time, saved_by, saved_time, published_by, published_time, remark
        )
        values
        <foreach collection="txwxFocusTempList" item="item" separator=",">
            (
                #{item.focusName}, #{item.imageUrl}, #{item.jumpUrl}, #{item.sortOrder}, 
                #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, 
                #{item.savedBy}, #{item.savedTime}, #{item.publishedBy}, #{item.publishedTime}, #{item.remark}
            )
        </foreach>
    </insert>

</mapper>